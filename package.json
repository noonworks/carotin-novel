{
  "name": "vertical",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "webpack-dev-server",
    "dev": "parcel src\\index.html",
    "wp:min": "webpack --mode=production",
    "wp:dev": "webpack --mode=development",
    "wp:both": "run-p wp:dev wp:min",
    "wp:fix": "rimraf doc/styles/**/*.js",
    "cp:fonts": "cpx \"src/fonts/*\" doc/styles/fonts",
    "cp:html": "cpx \"src/**/*.html\" doc",
    "doc:copy": "run-p cp:fonts cp:html",
    "doc:min": "rimraf doc/**/*.min.*",
    "dist:copy": "cpx \"doc/**/*.{js,css}\" dist",
    "dist:rm": "rimraf dist/styles/fonts",
    "build": "run-s wp:dev wp:fix doc:copy doc:min",
    "build:dist": "run-s wp:both wp:fix doc:copy dist:copy dist:rm doc:min",
    "clean": "rimraf dist doc"
  },
  "author": "@noonworks",
  "license": "MIT",
  "devDependencies": {
    "cpx": "^1.5.0",
    "css-loader": "^3.2.0",
    "marked": "^0.7.0",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "rimraf": "^3.0.0",
    "sass": "^1.22.10",
    "sass-loader": "^8.0.0",
    "superstatic": "^6.0.4",
    "ts-loader": "^6.0.4",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/node": "^12.7.4",
    "@types/store": "^2.0.2",
    "@types/ua-parser-js": "^0.7.33",
    "deep-equal": "^1.1.0",
    "deepmerge": "^4.0.0",
    "nipplejs": "^0.8.3",
    "scroll-out": "^2.2.7",
    "store": "^2.0.12"
  }
}
